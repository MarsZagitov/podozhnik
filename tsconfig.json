{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "lib": [
            "DOM",
            "ESNext"
        ],
        "jsx": "react-jsx",
        "noEmit": false,
        "isolatedModules": true,
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,        
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}